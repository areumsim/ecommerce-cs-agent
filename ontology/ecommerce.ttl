# =============================================================================
# Cardinality Restrictions (OWL 2)
# =============================================================================

# Order must have at least one OrderItem
ecom:Order rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:containsItem ;
    owl:minCardinality 1
] .

# OrderItem must have exactly one Product
ecom:OrderItem rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:hasProduct ;
    owl:cardinality 1
] .

# OrderItem must belong to exactly one Order
ecom:OrderItem rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:belongsToOrder ;
    owl:cardinality 1
] .

# Order must have exactly one Customer (via orderedBy)
ecom:Order rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:orderedBy ;
    owl:cardinality 1
] .

# Ticket must have exactly one Customer (via ticketOf)
ecom:Ticket rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:ticketOf ;
    owl:cardinality 1
] .

# =============================================================================
# Company Cardinality Restrictions
# =============================================================================

# Company must have exactly one companyId
ecom:Company rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:companyId ;
    owl:cardinality 1
] .

# Company must have exactly one companyName
ecom:Company rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:companyName ;
    owl:cardinality 1
] .

# Company must have exactly one companySize
ecom:Company rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:companySize ;
    owl:cardinality 1
] .

# BusinessRelationship connects exactly two companies
ecom:BusinessRelationship rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:hasSourceCompany ;
    owl:cardinality 1
] .

ecom:BusinessRelationship rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ecom:hasTargetCompany ;
    owl:cardinality 1
] .

# Object properties for reified relationships
ecom:hasSourceCompany a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:domain ecom:BusinessRelationship ;
    rdfs:range ecom:Company ;
    rdfs:label "관계 시작 기업"@ko ;
    rdfs:comment "비즈니스 관계의 시작점이 되는 기업"@ko .

ecom:hasTargetCompany a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:domain ecom:BusinessRelationship ;
    rdfs:range ecom:Company ;
    rdfs:label "관계 대상 기업"@ko ;
    rdfs:comment "비즈니스 관계의 대상이 되는 기업"@ko .
